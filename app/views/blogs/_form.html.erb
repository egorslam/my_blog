<div class="well">
	<div role="form">
		<%= form_for @blog do |f| %>
			<% if @blog.errors.any? %>
				<div id="errors">
					<h2><%= pluralize(@blog.errors.count, "error") %></h2>
					<ul>
					<% @blog.errors.full_messages.each do |msg| %>
						<li><%= msg %></li>
						<% end %>
					</ul>
				</div>
			<% end %>
			<div class="form-group">
				<h4>Title:</h4>
				<%= f.text_field :title, class: "form-control" %>
			</div>

				<%= f.submit class: "btn btn-primary"%>
	<% end %>
	</div>
	</div>