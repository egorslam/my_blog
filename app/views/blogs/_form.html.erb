
		<%= form_for @blog do |f| %>
			<% if @blog.errors.any? %>
				<div id="errors">
					<h2><%= pluralize(@blog.errors.count, "error") %></h2>
					<ul>
					<% @blog.errors.full_messages.each do |msg| %>
						<li><%= msg %></li>
						<% end %>
					</ul>
				</div>
			<% end %>
			<p>
				<%= f.label :title %>
				<%= f.text_field :title %>
			</p>

			<p>
				<%= f.submit %>
			</p>

	<% end %>