.well
  %div{:role => "form"}
    = form_for @blog do |f|
      - if @blog.errors.any?
        #errors
          %h2= pluralize(@blog.errors.count, "error")
          %ul
            - @blog.errors.full_messages.each do |msg|
              %li= msg
      .form-group
        %h4 Title:
        = f.text_field :title, class: "form-control"
      = f.submit class: "btn btn-primary"
