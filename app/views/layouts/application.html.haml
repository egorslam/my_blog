%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title
      MyBlog | #{yield(:title)}
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    #sidebar
 
      %ul
        %li.category Website
        %li= link_to "Blog", root_path
        %li= link_to "About", about_path
    #main_content
      #header
        = yield(:title)
        .buttons
          - if user_signed_in?
            %button.button= link_to "#{current_user.email}", edit_user_registration_path
            %button.button= link_to "New blog", new_blog_path
            %button.button= link_to "Sign out", destroy_user_session_path, :method => :delete
          - else
            %button.button= link_to "Sign up", new_user_registration_path
            %button.button= link_to "Sign in", new_user_session_path
      - flash.each do |name, msg|
        = content_tag(:div, msg, class: "alert")
      = yield
