<div class="comment clearfix">
	<div class="comment_content">
		<p class="comment_name"><strong><%= post.title %></strong></p>
		<p class="comment_body"><%= post.body %></p>
		<p class="comment_time"><%= time_ago_in_words(post.created_at) %> Ago</p>
	</div>
	<p><%= link_to 'Delete', [post.blog, post],
								  method: :delete,
								  class: "button",
								 	data: { confirm: 'Are you sure?' } %></p>
	
</div>